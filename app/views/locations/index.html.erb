<div class="posts-wrapper row">
	<% @locations.each do |location| %>
	  <div class="post">
	  	<div class="post-head">
	  		<div class="name">
	  			location.user.user_name
	  		</div>
  		</div>
				Name: <%= location.name %><br>
				Address: <%= location.address %><br>
				Category: <%= location.category %><br>
				Phone Number: <%= location.phone_number %><br>
		</div>
	<% end %>
</div>
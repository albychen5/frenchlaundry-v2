<div class="posts-wrapper row">
	<div class="post">
		Name: <%= @location.name %><br>
		Address: <%= @location.address %><br>
		Category: <%= @location.category %><br>
		Phone Number: <%= @location.phone_number %><br>
		<div class="name">
			Posted by: <%= @location.user.user_name %>
		</div>
	</div>
</div>

<div class="text-center edit-links">
	<%= link_to "Back", locations_path %>
	|
	<%= link_to "Edit", edit_location_path(@location) %>
	|
	<%= link_to "Delete", location_path(@location), method: :delete, data: { confirm: "Are you sure you want to delete this location?" } %>
</div>